# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server
PORT=4000
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Database
DB_URL=postgres://postgres:postgres@localhost:5432/greenland

# Hyperledger Fabric
FABRIC_WALLET=../fabric/network/wallets
FABRIC_CONNECTIONS_DIR=../fabric/network/connection-profiles

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_BUCKET=greenland-docs

# Stripe (Visa payments)
STRIPE_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Wave Senegal
WAVE_API_KEY=your_wave_api_key
WAVE_API_URL=https://api.wave.sn

# Orange Money Senegal
OM_API_KEY=your_orange_money_api_key
OM_API_URL=https://api.orange.sn/om

# Green T SARL Accounts (Commission 3%)
GREEN_T_WAVE_ACCOUNT=+221XXXXXXXXX
GREEN_T_OM_ACCOUNT=+221XXXXXXXXX
GREEN_T_BANK_IBAN=SN00XXXXXXXXXXXXXXXXXXXX
COMMISSION_RATE=0.03

# SMTP (Email notifications)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@greenland.sn

# Twilio (SMS notifications)
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_PHONE=+1234567890

# AI Services
VOSK_MODEL_PATH=./models/vosk-model-fr

# Observability
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
METRICS_PORT=9464

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=debug
